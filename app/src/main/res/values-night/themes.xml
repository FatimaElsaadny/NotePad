<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme (Dark Mode) -->
    <style name="Theme.NotePad" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary branding colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/cardTitleText</item>

        <!-- Secondary / accent colors -->
        <item name="colorSecondary">@color/fabColor</item>
        <item name="colorSecondaryVariant">@color/fabColor</item>
        <item name="colorOnSecondary">@color/cardTitleText</item>

        <!-- Status bar and system bars -->
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar">false</item> <!-- Light icons on dark toolbar/status bar -->

        <!-- Window background -->
        <item name="android:windowBackground">@color/background</item>
    </style>

    <!-- Optional: Splash-only theme -->
    <style name="Theme.NotePad.Splash" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_logo</item>
    </style>

</resources>
